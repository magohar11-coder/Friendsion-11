    <style>
        :root { --fb-blue: #1877f2; --diary-paper: #fff9e6; }
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background: #2c3e50; margin: 0; color: #333; }
        
        /* Diary Cover / Login */
        .cover-page { background: #5d4037; height: 100vh; display: flex; align-items: center; justify-content: center; text-align: center; color: #f1c40f; border-left: 15px solid #3e2723; }
        .login-btn { background: #f1c40f; color: #3e2723; padding: 15px 30px; border: none; border-radius: 5px; font-weight: bold; cursor: pointer; font-size: 1.2rem; box-shadow: 5px 5px 15px rgba(0,0,0,0.3); }

        /* Main App Layout */
        .header { background: #1877f2; color: white; padding: 10px 20px; position: sticky; top: 0; z-index: 1000; display: flex; justify-content: space-between; }
        .container { max-width: 600px; margin: auto; padding: 20px; }

        /* Diary Page Flip Effect */
        .diary-card { 
            background: var(--diary-paper); 
            padding: 25px; 
            margin-bottom: 25px; 
            border-radius: 2px 15px 15px 2px;
            box-shadow: 5px 5px 15px rgba(0,0,0,0.2);
            border-left: 5px solid #d4af37;
            position: relative;
            transform-origin: left;
            transition: transform 0.6s ease;
            min-height: 150px;
        }
        .diary-card:hover { transform: rotateY(-5deg); }
        .diary-card::after { content: ''; position: absolute; top: 0; bottom: 0; left: 10px; width: 1px; background: rgba(212,175,55,0.3); box-shadow: 2px 0 0 rgba(212,175,55,0.3); }

        /* Chat Logic Style */
        .chat-msg { margin: 10px 0; padding: 10px; border-radius: 10px; max-width: 80%; position: relative; }
