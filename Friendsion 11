<body>

    <div id="loginPage" class="cover-page">
        <div>
            <h1 style="font-size: 4rem; margin-bottom: 0;">Friendsion 11</h1>
            <p style="font-size: 1.5rem; font-style: italic;">The Golden Diary of Memories</p><br>
            <button onclick="login()" class="login-btn">Unlock Diary</button>
        </div>
    </div>

    <div id="appPage">
        <div class="header">
            <h2>Friendsion 11</h2>
            <button onclick="logout()" style="color: white; background: none; border: 1px solid white; padding: 5px 10px; border-radius: 4px;">Exit Diary</button>
        </div>

        <div class="container">
            <div class="input-area">
                <textarea id="postInput" rows="3" placeholder="Write a new memory in your diary..."></textarea>
                <button onclick="savePost()" style="width:100%; padding:10px; background:#1877f2; color:white; border:none; border-radius:5px; margin-top:10px; font-weight:bold;">Write to Diary</button>
            </div>

            <div id="feed"></div>
        </div>
    </div>

    <script>
        // Firebase Configuration
        const firebaseConfig = {
            apiKey: "AIzaSyCuv48za3h_bDFbwXW3RXuS5ZrRJ4VfQLA",
            authDomain: "friendsion-11.firebaseapp.com",
            databaseURL: "https://friendsion-11-default-rtdb.firebaseio.com",
            projectId: "friendsion-11",
            storageBucket: "friendsion-11.appspot.com",
            messagingSenderId: "358544393520",
            appId: "1:358544393520:web:77918a24559b15d658c14d"
        };

        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.database();

        // Login/Logout Logic
        function login() {
            const provider = new firebase.auth.GoogleAuthProvider();
            auth.signInWithPopup(provider);
        }
        function logout() { auth.signOut(); }

        auth.onAuthStateChanged(user => {
            if (user) {
                document.getElementById('loginPage').style.display = 'none';
                document.getElementById('appPage').style.display = 'block';
                loadPosts();
            } else {
                document.getElementById('loginPage').style.display = 'flex';
                document.getElementById('appPage').style.display = 'none';
            }
        });

        // Diary Post Logic
        function savePost() {
            const text = document.getElementById('postInput').value;
            const user = auth.currentUser;
            if (text.trim() !== "") {
                db.ref('diary_posts').push({
                    uid: user.uid,
                    name: user.displayName,
                    photo: user.photoURL,
                    message: text,
                    timestamp: Date.now()
                });
                document.getElementById('postInput').value = "";
            }
        }

        // WhatsApp Style Delete Logic
        function deletePost(postId) {
            if (confirm("Delete this memory forever?")) {
                db.ref('diary_posts/' + postId).remove();
            }
        }

        // Load Posts with Flip Design
        function loadPosts() {
            const user = auth.currentUser;
            db.ref('diary_posts').on('value', snapshot => {
                const feed = document.getElementById('feed');
                feed.innerHTML = "";
                const data = snapshot.val();
                if (data) {
                    Object.keys(data).reverse().forEach(key => {
                        const post = data[key];
                        const isOwner = user.uid === post.uid;
                        
                        feed.innerHTML += `
                            <div class="diary-card">
                                <div style="display:flex; align-items:center; margin-bottom:10px;">
                                    <img src="${post.photo}" style="width:30px; border-radius:50%; margin-right:10px;">
                                    <span style="font-weight:bold; font-size:14px;">${post.name}</span>
                                    ${isOwner ? `<span class="delete-btn" onclick="deletePost('${key}')">Delete</span>` : ''}
                                </div>
                                <div style="font-family: 'Georgia', serif; font-size:18px; line-height:1.6;">
                                    ${post.message}
                                </div>
                                <div style="font-size:10px; color:#888; margin-top:15px; text-align:right;">
                                    ${new Date(post.timestamp).toLocaleString()}
                                </div>
                            </div>
                        `;
                    });
                }
            });
        }
    </script>
</body>
